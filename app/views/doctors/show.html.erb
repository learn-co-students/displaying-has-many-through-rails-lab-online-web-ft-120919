<h1><%= @doctor.name %></h1>
<h2><%= "Department: #{@doctor.department}" %></h2>

<table>
  <thead>
    <tr>
      <th>Appointment Time</th>
      <th>Patient Name</th>
    <tr>
  </thead>

  <tbody>
    <% @doctor.appointments.each do |appt| %>
      <tr>
        <td><%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></td>
        <td><%= link_to appt.patient.name, patient_path(appt.patient) %></td>
      </tr>
    <% end %>
  </tbody>

</table>
