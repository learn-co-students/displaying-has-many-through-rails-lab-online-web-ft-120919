<h2><%=@doctor.name%><%=@doctor.department%></h2>
<ul>
  <% @doctor.appointments.each do |appointment| %>
    <li>
      <%=link_to "#{appointment.patient.name}" +" "+ "#{appointment.appointment_datetime.strftime("%B %d, %Y at %k:%M")}", appointment.patient %>
    </li>
  <% end %>
</ul>
<p><%= link_to 'All Doctors', doctors_path %></p>
<p><%= link_to 'All Patients', patients_path %></p>
